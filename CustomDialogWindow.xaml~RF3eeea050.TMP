<Window x:Class="LoudSong.CustomDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting Song's Information" Height="250" Width="580"
        WindowStyle="None"
    WindowStartupLocation ="CenterScreen">
   


    <!-- Grid's Settings -->
    <Grid x:Name="dialogWindowGrid">

        <!-- Grid's rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Grid's columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Label Name="backgroundLabel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- First Row Elements - Label -->
        <Label Name="lblCustomDialog" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Second Row Elements - TextBox -->
        <TextBox Name="txtBoxCustomDialog" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="3,3,0,0" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="200" MaxLength="4000" TextWrapping="NoWrap"/>

        <!-- Third Row Elements - Buttons -->
        <Button Name="btnOkCustomDialog" Grid.Row="3" Grid.Column="0" Padding="5" Margin="0,0,0,5" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="btnOk_Click"/>
        <Button Name="btnCancelCustomDialog" Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,0,0,5" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="btnCancel_Click"/>

    </Grid>
      
  


</Window>
