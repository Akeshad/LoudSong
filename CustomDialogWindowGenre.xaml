<Window x:Class="LoudSong.CustomDialogWindowGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting Song's Genre" Height="160" Width="370">

    <!-- Grid's Settings -->
    <Grid x:Name="dialogWindowGenderGrid">
        
        <!-- Grid's rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Grid's columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- First Row Elements - Label and ComboBox -->
        <Label Name="lblCustomDialogGender" Grid.Row="0" Grid.Column="0" Content="Choose a gender!" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox Name="cmbBoxGenre" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="170" Height="25"/>

        <!-- Second Row Elements - Buttons -->
        <Button Name="btnOkGender" Grid.Row="1" Grid.Column="0" Content="OK" Width="100" Height="25" IsDefault="True" Click="btnOk_Click" />
        <Button Name="btnCancelGender" Grid.Row="1" Grid.Column="1" Content="Cancel" Width="100" Height="25" IsCancel="True" Click="btnCancel_Click"/>

    </Grid>

</Window>
